@model List<Clinic_WebApp.Models.Doctor>
@{
    ViewData["Title"] = "DocInfo";
}

<main class="dashboard-content">
    <h1 class="text-center">Appointments</h1>
    <table class="table table-bordered table-striped mt-4">
        <thead class="table-primary">
            <tr>
                <th>Doctor ID</th>
                <th>Doctor Name</th>
                <th>Doctor Speciality</th>
                               
                <th>Total Patients Pendings</th>
                
                
            </tr>
        </thead>
        <tbody>
            @foreach (var appointment in Model)
                {
                    <tr>
                        <td>@appointment.DoctorID</td>
                        <td>@appointment.dname</td>
                        <td>@appointment.dspeciality</td>
                        
                        <td>@appointment.BookAppoitments.Count</td>
                        
                                              
                    </tr>
                }           
        </tbody>
    </table>
</main>

