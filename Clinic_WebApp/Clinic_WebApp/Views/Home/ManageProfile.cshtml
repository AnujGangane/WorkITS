

@model Clinic_WebApp.Models.Doctor
@inject IHttpContextAccessor Accessor
@{
    ViewData["Title"] = "ManageProfile";
    // var doctorName = ViewData["DoctorName"];
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Doctor Dashboard</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">

</head>
<body>
    <header class="dashboard-header">
        <h1>Welcome, @Accessor.HttpContext.Session.GetString("DoctorName")</h1>
        <p>Your personalized dashboard</p>
    </header>
    <nav class="dashboard-nav">
        <div>
            <a href="/Home/ViewAppointments">View Appointments</a>
            <a href="/Home/ManageProfile">Manage Profile</a>
            <a href="/Home/PatientRecords">Patient Records</a>
        </div>
        <a href="/Home/Logout">Logout</a>
    </nav>
    <form action="/Home/Update" method="post">
        <div class="container">
            <h1>Update Doctor</h1>
            <form asp-action="CreateDoc" method="post">
                <div>
                    <label for="dname">Doctor ID</label>
                <input name="DoctorID" value="@Model.DoctorID" type="hidden" id="DoctorID" placeholder="Enter doctor's name" required />
                <span asp-validation-for="DoctorID" class="error"></span>
                </div>
                <div>
                    <label for="dname">Doctor Name</label>
                    <input name="dname" value="@Model.dname" type="text" id="dname" placeholder="Enter doctor's name" required />
                    <span asp-validation-for="dname" class="error"></span>
                </div>

                <div>
                    <label for="dspeciality">Speciality</label>
                <input name="dspeciality" value="@Model.dspeciality" type="text" id="dspeciality" placeholder="Enter doctor's speciality" required />
                    <span asp-validation-for="dspeciality" class="error"></span>
                </div>

                <div>
                    <label for="dphone">Phone Number</label>
                <input asp-for="dphone" value="@Model.dphone" type="tel" id="dphone" placeholder="Enter doctor's phone number" required />
                    <span asp-validation-for="dphone" class="error"></span>
                </div>

                <input type="submit" value="Register Doctor" />
            </form>
        </div>
    </form>
    </body>
    <footer class="footer">
        &copy; 2025 Our Hospital. All Rights Reserved.
    </footer>
<style>

    .container {
        background-color: #ffffff;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        max-width: 500px;
        width: 100%;
        animation: fadeIn 0.8s ease-in-out;
    }

        .container h1 {
            font-size: 2rem;
            color: #0078D7;
            text-align: center;
            margin-bottom: 20px;
            font-weight: bold;
        }

    form {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

        form div {
            display: flex;
            flex-direction: column;
        }

        form label {
            margin-bottom: 8px;
            font-weight: bold;
            color: #333;
            font-size: 1rem;
        }

        form input[type="text"],
        form input[type="tel"] {
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 6px;
            font-size: 1rem;
            background-color: #f9f9f9;
            transition: all 0.3s ease;
        }

            form input[type="text"]:focus,
            form input[type="tel"]:focus {
                border-color: #0078D7;
                background-color: #ffffff;
                outline: none;
                box-shadow: 0 0 5px rgba(0, 120, 215, 0.3);
            }

        form input[type="submit"] {
            background-color: #0078D7;
            color: white;
            border: none;
            border-radius: 6px;
            padding: 12px;
            font-size: 1.1rem;
            font-weight: bold;
            text-transform: uppercase;
            cursor: pointer;
            transition: all 0.3s ease;
            letter-spacing: 1px;
        }

            form input[type="submit"]:hover {
                background-color: #005bb5;
                transform: translateY(-2px);
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
            }

            form input[type="submit"]:active {
                background-color: #003f8a;
                transform: translateY(0);
                box-shadow: none;
            }

    .error {
        font-size: 0.9rem;
        color: red;
        margin-top: 5px;
    }


    .dashboard-header {
        background-color: #007bff;
        color: white;
        padding: 20px;
        text-align: center;
    }

        .dashboard-header h1 {
            margin: 0;
            font-size: 28px;
        }

        .dashboard-header p {
            margin: 5px 0 0;
            font-size: 18px;
            font-style: italic;
        }

    .dashboard-nav {
        background-color: #343a40;
        color: white;
        padding: 15px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .dashboard-nav a {
            color: white;
            text-decoration: none;
            margin: 0 10px;
            font-weight: 500;
        }

            .dashboard-nav a:hover {
                text-decoration: underline;
            }

    .dashboard-content {
        padding: 30px;
    }

    .card {
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .card h5 {
            font-size: 20px;
        }

    .footer {
        background-color: #007bff;
        color: white;
        text-align: center;
        padding: 15px;
        margin-top: 30px;
        font-size: 14px;
    }
</style>

</html>




